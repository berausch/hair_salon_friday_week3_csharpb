<!DOCTYPE html>
<html>
  <head>
    <title>Stylist</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <h2>Here are all the clients in this stylist:</h2>

    @if (Model["clients"].Count == 0)
    {
    <p>No clients have been added yet!</p>
    }
    else
    {
    <ul>
      @foreach (var client in @Model["clients"])
      {

          <li><h4>@client.GetName() - @client.GetNotes()</h4></li>
            <h5><form action="/stylist/clientdelete/@client.GetId()" method="post">
                <a href="/client/edit/@client.GetId()"><button type="button">Edit</button></a>
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit">Delete</button></h5>
              </form>
      }
    </ul>
    }
    <h1>Add a new client for this Stylist</h1>
    <form action="/stylist/newclient" method="post">
      <label for="client-name">Client name:</label>
      <input id="client-name" name="client-name" type="text">
      <label for="client-notes">Client notes:</label>
      <input id="client-notes" name="client-notes" type="text">
      <input id="stylist-id" name="stylist-id" type="hidden" value='@Model["stylist"].GetId()'>
      <button type="submit">Add new client</button>
    </form>
    <p><a href="/">Return to Main Page</a></p>
  </body>
</html>
